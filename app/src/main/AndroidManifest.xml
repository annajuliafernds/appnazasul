        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppNaza">

        <!-- Tela de Cadastro (ponto de entrada do app) -->
        <activity android:name=".activity_register">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Tela de Login -->
        <activity android:name=".activity_login" />

        <!-- Tela Inicial (apÃ³s login) -->
        <activity android:name=".activity_home" />

    </application>

</manifest>
